@model System.Data.DataTable
@using System.Data
@{
    ViewBag.Title = "PPA Accounts Upload";
}

<div class="container-fluid px-4 py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Upload Card -->
            <div class="card border-0 shadow-lg rounded-lg overflow-hidden">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0"><i class="fas fa-cloud-upload-alt mr-2"></i> PPA Accounts Upload</h3>
                        <a href="@Url.Action("DownloadTemplate")" class="btn btn-light btn-sm shadow-sm">
                            <i class="fas fa-file-download mr-2"></i> Download Template
                        </a>
                    </div>
                </div>

                <div class="card-body px-4 py-4">
                    @using (Html.BeginForm("PPAAccountsUpload", "EXCELFILEUPLOAD", FormMethod.Post, new { enctype = "multipart/form-data", id = "uploadForm" }))
                    {
                        <div class="row">
                            <!-- Left Column - Upload Area -->
                            <div class="col-md-7 pr-md-4">
                                <div class="dropzone-container mb-4" id="dropzone">
                                    <div class="dropzone-content text-center py-5">
                                        <i class="fas fa-file-excel text-primary mb-3" style="font-size: 3rem;"></i>
                                        <h5 class="mb-2">Drag & drop your Excel file here</h5>
                                        <p class="text-muted small mb-3">or</p>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="ExcelFile" name="ExcelFile" accept=".xlsx,.xls" required>
                                            <label class="custom-file-label btn btn-outline-primary" for="ExcelFile">
                                                <i class="fas fa-folder-open mr-2"></i>Browse Files
                                            </label>
                                        </div>
                                        <p class="text-muted small mt-3">Supports .xlsx, .xls (Max 5MB)</p>
                                    </div>
                                </div>

                                <div class="file-preview-container bg-light rounded p-3 mb-4" id="filePreview" style="display: none;">
                                    <div class="file-display">
                                        <div class="file-info d-flex align-items-center">
                                            <div class="file-icon bg-primary text-white rounded p-3 mr-3">
                                                <i class="fas fa-file-excel fa-2x"></i>
                                            </div>
                                            <div class="file-details flex-grow-1">
                                                <div class="file-name font-weight-bold"></div>
                                                <div class="file-size text-muted small"></div>
                                                <div class="progress mt-2" style="height: 5px; display: none;">
                                                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
                                                </div>
                                            </div>
                                            <div class="remove-file text-danger ml-3" title="Remove file" style="cursor: pointer;">
                                                <i class="fas fa-times-circle fa-lg"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary btn-block py-3 shadow-sm" id="uploadBtn">
                                    <i class="fas fa-upload mr-2"></i> Upload File
                                </button>
                            </div>

                            <!-- Right Column - Instructions -->
                            <div class="col-md-5 pl-md-4 border-left">
                                <div class="sticky-top" style="top: 20px;">
                                    <h5 class="d-flex align-items-center mb-4">
                                        <span class="badge badge-primary badge-pill mr-3 py-2 px-3">1</span>
                                        <span>Upload Instructions</span>
                                    </h5>

                                    <div class="instruction-step mb-4">
                                        <div class="d-flex mb-3">
                                            <div class="step-number bg-light-primary text-primary rounded-circle mr-3 d-flex align-items-center justify-content-center" style="width: 30px; height: 30px; flex-shrink: 0;">1</div>
                                            <div>
                                                <h6 class="mb-1">Download Template</h6>
                                                <p class="text-muted small mb-0">Use our pre-formatted template to ensure data compatibility</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="instruction-step mb-4">
                                        <div class="d-flex mb-3">
                                            <div class="step-number bg-light-primary text-primary rounded-circle mr-3 d-flex align-items-center justify-content-center" style="width: 30px; height: 30px; flex-shrink: 0;">2</div>
                                            <div>
                                                <h6 class="mb-1">Prepare Your Data</h6>
                                                <p class="text-muted small mb-0">Fill in all required fields with accurate information</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="instruction-step mb-4">
                                        <div class="d-flex mb-3">
                                            <div class="step-number bg-light-primary text-primary rounded-circle mr-3 d-flex align-items-center justify-content-center" style="width: 30px; height: 30px; flex-shrink: 0;">3</div>
                                            <div>
                                                <h6 class="mb-1">Upload File</h6>
                                                <p class="text-muted small mb-0">Drag & drop or browse to select your prepared file</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="alert alert-warning mt-4 small">
                                        <i class="fas fa-exclamation-triangle mr-2"></i>
                                        <strong>Important:</strong> Ensure all account numbers and PPO numbers are correct before uploading.
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Recent Uploads Section -->
            <div class="card border-0 shadow-lg rounded-lg mt-5 overflow-hidden">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="fas fa-history text-primary mr-2"></i> Recent Uploads
                    </h5>
                </div>
                <div class="card-body px-0 pb-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th class="pl-4">Account No</th>
                                    <th>PPO No</th>
                                    <th>Name</th>
                                    <th>Upload Date</th>
                                    <th class="text-center">Status</th>
                                    <th class="pr-4 text-right">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Rows.Count > 0)
                                {
                                    foreach (DataRow row in Model.Rows)
                                    {
                                        <tr>
                                            <td class="pl-4 font-weight-bold">@row["PPA_ACNO"]</td>
                                            <td>@row["PPA_PPONO"]</td>
                                            <td>@row["PPA_NAME"]</td>
                                            <td>@row["PPA_CREATED_DATE"]</td>
                                            <td class="text-center">
                                                <span class="badge badge-pill badge-success py-1 px-3">Completed</span>
                                            </td>
                                            <td class="pr-4 text-right">
                                                <button class="btn btn-sm btn-outline-secondary rounded-circle" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-primary rounded-circle" title="Download">
                                                    <i class="fas fa-download"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-5">
                                            <div class="empty-state">
                                                <i class="fas fa-database text-muted fa-3x mb-3"></i>
                                                <h5 class="text-muted">No recent uploads found</h5>
                                                <p class="text-muted small">Upload your first file to see it appear here</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8fafc;
    }

    .card {
        border: none;
        transition: all 0.3s ease;
    }

    .card-header {
        border-bottom: none;
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #3f80ea 0%, #1e3c8b 100%);
    }

    .dropzone-container {
        border: 2px dashed #d1d5db;
        border-radius: 8px;
        background-color: #f9fafb;
        transition: all 0.3s ease;
    }

        .dropzone-container:hover {
            border-color: #3b82f6;
            background-color: rgba(59, 130, 246, 0.05);
        }

        .dropzone-container.dragover {
            border-color: #3b82f6;
            background-color: rgba(59, 130, 246, 0.1);
        }

    .custom-file-label {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .file-preview-container {
        border: 1px solid #e5e7eb;
        transition: all 0.3s ease;
    }

    .bg-light-primary {
        background-color: #ebf2ff;
    }

    .instruction-step {
        position: relative;
    }

        .instruction-step:not(:last-child):after {
            content: "";
            position: absolute;
            left: 15px;
            top: 40px;
            bottom: -20px;
            width: 2px;
            background-color: #e5e7eb;
        }

    .table thead th {
        border-top: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        color: #6b7280;
    }

    .table td {
        vertical-align: middle;
    }

    .empty-state {
        padding: 2rem;
    }

    .badge-pill {
        border-radius: 50rem;
    }

    .btn-rounded {
        border-radius: 50px;
    }
</style>

<script>
    $(document).ready(function () {
        // Dropzone functionality
        const dropzone = $('#dropzone');
        const fileInput = $('#ExcelFile');

        // Highlight dropzone when dragging over
        $(document).on('dragover', function (e) {
            e.preventDefault();
            dropzone.addClass('dragover');
        });

        $(document).on('dragleave', function (e) {
            e.preventDefault();
            dropzone.removeClass('dragover');
        });

        // Handle dropped files
        dropzone.on('drop', function (e) {
            e.preventDefault();
            dropzone.removeClass('dragover');

            if (e.originalEvent.dataTransfer.files.length) {
                fileInput[0].files = e.originalEvent.dataTransfer.files;
                updateFilePreview();
            }
        });

        // Handle file selection via browse
        fileInput.change(updateFilePreview);

        // Update file preview
        function updateFilePreview() {
            const file = fileInput[0].files[0];
            const filePreview = $('#filePreview');

            if (file) {
                const fileSize = formatFileSize(file.size);

                filePreview.find('.file-name').text(file.name);
                filePreview.find('.file-size').text(fileSize);
                filePreview.show();
                dropzone.hide();

                // Validate file type
                if (!file.name.match(/\.(xlsx|xls)$/i)) {
                    showAlert('error', 'Invalid file type. Please upload an Excel file (.xlsx or .xls)');
                    resetFileInput();
                    return;
                }

                // Validate file size (5MB max)
                if (file.size > 5 * 1024 * 1024) {
                    showAlert('error', 'File size exceeds 5MB limit');
                    resetFileInput();
                    return;
                }
            }
        }

        // Remove file
        $(document).on('click', '.remove-file', function () {
            resetFileInput();
        });

        function resetFileInput() {
            fileInput.val('');
            $('#filePreview').hide();
            dropzone.show();
        }

        // Format file size
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // Show alert
        function showAlert(type, message) {
            const alertClass = type === 'error' ? 'alert-danger' : 'alert-success';
            const alert = $(`
                <div class="alert ${alertClass} alert-dismissible fade show mb-4" role="alert">
                    ${message}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            `);

            $('#uploadForm').prepend(alert);

            setTimeout(() => {
                alert.alert('close');
            }, 5000);
        }

        // Form submission
        $('#uploadForm').submit(function (e) {
            if (!fileInput[0].files.length) {
                e.preventDefault();
                showAlert('error', 'Please select a file first');
                return false;
            }

            // Show loading state
            const uploadBtn = $('#uploadBtn');
            uploadBtn.prop('disabled', true);
            uploadBtn.html('<i class="fas fa-spinner fa-spin mr-2"></i> Uploading...');

            // Simulate progress bar (remove this in production)
            const progressBar = $('#filePreview .progress-bar');
            const progressContainer = $('#filePreview .progress');

            progressContainer.show();

            let progress = 0;
            const interval = setInterval(() => {
                progress += 10;
                progressBar.css('width', progress + '%');

                if (progress >= 100) {
                    clearInterval(interval);
                }
            }, 300);

            return true;
        });
    });
</script>