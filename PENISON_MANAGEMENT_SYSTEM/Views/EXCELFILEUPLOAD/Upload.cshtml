<script>
    $(document).ready(function () {
        // Display selected file name
        $('#excelFileInput').change(function (e) {
            var fileName = e.target.files[0].name;
            $('#fileNameDisplay').html('<i class="fas fa-file me-2"></i>' + fileName);
            $('#dropZone').addClass('border-success').removeClass('border-primary');
        });

        // Drag and drop highlight
        $('#dropZone').on('dragover', function () {
            $(this).addClass('border-warning bg-light');
        }).on('dragleave drop', function () {
            $(this).removeClass('border-warning bg-light');
        });

        // Form submission feedback
        $('#excelUploadForm').submit(function () {
            $('#uploadBtn').html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Uploading...').prop('disabled', true);
        });

        // Initialize DataTable with enhanced features
        if ($('#dataTable').length) {
            var table = $('#dataTable').DataTable({
                paging: false, // Disable DataTables pagination since we're using server-side
                searching: false, // Disable DataTables search since we have our own
                info: false, // Disable DataTables info since we have our own
                ordering: true,
                responsive: true,
                dom: 't'
            });

            // Global search functionality
            $('#globalSearch').keyup(function () {
                table.search($(this).val()).draw();
            });
        }
    });
</script>

<style>
    #dropZone {
        border: 2px dashed #0d6efd;
        transition: all 0.3s;
        cursor: pointer;
    }

        #dropZone:hover {
            background-color: #f8f9fa;
        }

    .custom-file-label::after {
        content: "Browse";
        background-color: bisque;
    }

    .table th {
        white-space: nowrap;
        position: relative;
    }

    .badge {
        font-size: 0.9em;
        padding: 0.5em 0.75em;
    }

    /* Pagination styling */
    .pagination .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    .pagination .page-link {
        color: #0d6efd;
    }

    /* Search box styling */
    #globalSearch {
        transition: all 0.3s;
    }

        #globalSearch:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

    /* Table row hover effect */
    #dataTable tbody tr:hover {
        background-color: rgba(13, 110, 253, 0.05);
        cursor: pointer;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .card-header {
            flex-direction: column;
            align-items: flex-start;
        }

        #globalSearch {
            width: 100% !important;
            margin-top: 10px;
        }

        .pagination {
            flex-wrap: wrap;
            justify-content: center;
        }
    }
    #excelFileInput {
        background: linear-gradient(135deg, #d4af37 0%, #ffffff 100%);
    }
</style>