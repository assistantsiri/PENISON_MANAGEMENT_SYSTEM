@{
    ViewBag.Title = "Pension Module Document";
}

<div class="container-fluid px-5 py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 text-primary font-weight-bold">Centralized Pension Module</h1>
            @*<p class="lead text-muted">Comprehensive documentation for pension management system</p>*@
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger shadow-lg p-4 mb-4 rounded">
            <h4 class="alert-heading"><i class="fas fa-exclamation-triangle mr-2"></i>Error Loading Document</h4>
            <hr>
            <p class="mb-0">@ViewBag.Error</p>
        </div>
    }
    else
    {
        <div class="card shadow-lg mb-10">
            <div class="card-header bg-primary text-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-file-pdf mr-2"></i>
                        CENTRALIZED PENSION MODULE.pdf
                    </h4>
                    <div class="btn-group">
                        <a href="@ViewBag.PdfPath" class="btn btn-light" target="_blank">
                            <i class="fas fa-eye mr-2"></i> View PDF
                        </a>
                        <a href="@Url.Action("ViewPDF")" class="btn btn-success">
                            <i class="fas fa-download mr-2"></i> Download PDF
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <!-- Enhanced PDF viewer section -->
                <div class="embed-responsive embed-responsive-16by9" style="min-height: 70vh;">
                    <iframe class="embed-responsive-item" src="@ViewBag.PdfPath" type="application/pdf" style="border: none;"></iframe>
                </div>
            </div>
            <div class="card-footer bg-light py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">Document last updated: @DateTime.Now.ToString("MMMM dd, yyyy")</small>
                    <div>
                        <button class="btn btn-sm btn-outline-secondary mr-2">
                            <i class="fas fa-print mr-1"></i> Print
                        </button>
                        <button class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-share-alt mr-1"></i> Share
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Document information section -->
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-info-circle mr-2"></i>Document Information</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="fas fa-file-alt mr-2 text-primary"></i> Document Type</span>
                                <span class="badge badge-primary">Technical Manual</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="fas fa-calendar-alt mr-2 text-primary"></i> Last Updated</span>
                                <span>@DateTime.Now.ToString("MMMM dd, yyyy")</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="fas fa-file-download mr-2 text-primary"></i> Downloads</span>
                                <span class="badge badge-pill badge-secondary">1,245</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-tags mr-2"></i>Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-wrap">
                            <a href="#" class="btn btn-outline-primary m-2">
                                <i class="fas fa-bookmark mr-1"></i> Bookmark
                            </a>
                            <a href="#" class="btn btn-outline-success m-2">
                                <i class="fas fa-comment mr-1"></i> Add Comment
                            </a>
                            <a href="#" class="btn btn-outline-warning m-2">
                                <i class="fas fa-highlighter mr-1"></i> Highlight
                            </a>
                            <a href="#" class="btn btn-outline-danger m-2">
                                <i class="fas fa-flag mr-1"></i> Report Issue
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

