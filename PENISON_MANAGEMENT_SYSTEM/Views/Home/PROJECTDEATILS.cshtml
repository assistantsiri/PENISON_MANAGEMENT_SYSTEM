    body {
        background-color: #f8f9fa;
    }

    .card {
        border: none;
        border-radius: 10px;
        transition: transform 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .embed-responsive {
        border-radius: 0 0 10px 10px;
    }

    .btn {
        border-radius: 5px;
        padding: 8px 16px;
        font-weight: 500;
    }

    h1.display-4 {
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
