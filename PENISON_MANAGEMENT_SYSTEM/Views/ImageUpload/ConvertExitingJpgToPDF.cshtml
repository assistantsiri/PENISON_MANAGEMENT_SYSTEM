<script>

    function showAlert(title, text, icon, confirmButtonText) {
        return new Promise((resolve) => {

            const overlay = document.createElement('div');
            overlay.className = 'custom-alert-overlay';


            const modal = document.createElement('div');
            modal.className = 'custom-alert';


            let iconHtml = '';
            let buttonClass = '';
            switch(icon) {
                case 'success':
                    iconHtml = '✅';
                    modal.style.borderTop = '4px solid #4CAF50';
                    buttonClass = '';
                    break;
                case 'error':
                    iconHtml = '❌';
                    modal.style.borderTop = '4px solid #f44336';
                    buttonClass = 'error';
                    break;
                case 'warning':
                    iconHtml = '⚠️';
                    modal.style.borderTop = '4px solid #ff9800';
                    buttonClass = 'warning';
                    break;
                case 'info':
                    iconHtml = 'ℹ️';
                    modal.style.borderTop = '4px solid #2196F3';
                    buttonClass = 'info';
                    break;
                default:
                    iconHtml = '💡';
                    modal.style.borderTop = '4px solid #9e9e9e';
            }

            modal.innerHTML = `
                <div class="custom-alert-icon">${iconHtml}</div>
                <h3 class="custom-alert-title">${title}</h3>
                <p class="custom-alert-text">${text}</p>
                <button class="custom-alert-button ${buttonClass}" onclick="closeCustomAlert(this, true)">
                    ${confirmButtonText || 'OK'}
                </button>
            `;

            overlay.appendChild(modal);
            document.body.appendChild(overlay);


            overlay.resolve = resolve;
        });
    }

    function closeCustomAlert(button, result) {
        const overlay = button.closest('.custom-alert-overlay');
        if (overlay) {
            if (overlay.resolve) {
                overlay.resolve({ isConfirmed: result });
            }
            document.body.removeChild(overlay);
        }
    }


    const Swal = {
        fire: function(options) {
            if (typeof options === 'string') {
                options = { title: options, text: '', icon: 'info' };
            }
            return showAlert(options.title, options.text, options.icon, options.confirmButtonText);
        }
    };


    let conversionInterval;
    let isConverting = false;
    let currentSessionId = null;


    document.addEventListener('DOMContentLoaded', function() {
        console.log('Page loaded - initializing conversion system');


        const startBtn = document.getElementById('startConversion');
        if (startBtn) {
            startBtn.addEventListener('click', startConversion);
            console.log('Button event listener added');
        } else {
            console.error('Start button not found!');
        }


        const totalConverted = @(ViewBag.TotalConvertedAll != null ? ViewBag.TotalConvertedAll : 0);
        if (totalConverted > 0) {
            document.getElementById('startSection').style.display = 'none';
            document.getElementById('resultsSection').style.display = 'block';
            showAlert('Conversion Completed!', 'Total JPGs converted to DB today: ' + totalConverted, 'success', 'Great!');
        }
    });

    function startConversion() {
        console.log('Start conversion clicked');

        if (isConverting) {
            console.log('Conversion already in progress');
            showAlert('Conversion Running', 'Conversion process is already running.', 'info', 'OK');
            return;
        }

        isConverting = true;
        const startBtn = document.getElementById('startConversion');
        startBtn.disabled = true;
        startBtn.innerHTML = '⏳ Starting...';


        document.getElementById('startSection').style.display = 'none';
        document.getElementById('progressSection').style.display = 'block';
        document.getElementById('loader').style.display = 'block';


        addLog('Starting conversion process...', 'info');


        fetch('@Url.Action("_ConvertExitingJpgToPDF", "ImageUpload")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            credentials: 'same-origin'
        })
        .then(response => {
            console.log('Response received:', response.status);
            if (!response.ok) {
                throw new Error('Network response was not ok: ' + response.status);
            }
            return response.json();
        })
        .then(data => {
            console.log('Conversion response:', data);
            if (data.success) {
                currentSessionId = data.sessionId;
                document.getElementById('sessionId').textContent = 'Session: ' + (currentSessionId ? currentSessionId.substring(0, 8) + '...' : '--');
                addLog('Conversion process started successfully!', 'success');
                addLog('Session ID: ' + currentSessionId, 'info');
                startProgressMonitoring();
            } else {
                throw new Error(data.message || 'Failed to start conversion');
            }
        })
        .catch(error => {
            console.error('Conversion error:', error);
            addLog('Error starting conversion: ' + error.message, 'error');
            showAlert('Conversion Failed', 'Failed to start conversion process: ' + error.message, 'error', 'OK');
            resetUI();
        });
    }

    function startProgressMonitoring() {
        console.log('Starting progress monitoring...');


        setTimeout(() => {
            document.getElementById('loader').style.display = 'none';
        }, 2000);


        updateProgress();
        conversionInterval = setInterval(updateProgress, 3000);
    }

    function updateProgress() {
        fetch('@Url.Action("GetConversionProgress", "ImageUpload")', {
            method: 'GET',
            headers: {
                'Accept': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            credentials: 'same-origin'
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok: ' + response.status);
            }
            return response.json();
        })
        .then(progressData => {
            console.log('Progress data:', progressData);
            if (progressData.success) {
                updateProgressUI(progressData);


                if (!progressData.isRunning && progressData.folderProgress && progressData.folderProgress.length > 0) {
                    completeConversion(progressData);
                }
            } else {
                throw new Error(progressData.error || 'Failed to get progress');
            }
        })
        .catch(error => {
            console.error('Progress fetch error:', error);
            addLog('Error fetching progress: ' + error.message, 'error');
        });
    }

    function updateProgressUI(progressData) {
        let totalConverted = 0;
        let totalFailed = 0;
        let totalFiles = 0;
        let currentTask = 'Processing...';

        if (progressData.overallProgress && progressData.overallProgress.length > 0) {
            progressData.overallProgress.forEach(account => {
                totalConverted += account.ConvertedFiles || 0;
                totalFailed += account.FailedFiles || 0;
                totalFiles += account.TotalFiles || 0;
            });
        }


        if (progressData.folderProgress && progressData.folderProgress.length > 0) {
            const activeFolder = progressData.folderProgress.find(f =>
                f.Status === 'In Progress' || f.Status === 'Processing'
            );

            if (activeFolder) {
                currentTask = `${activeFolder.AccountType} - ${activeFolder.DpCode}`;
                if (activeFolder.CurrentFile && activeFolder.CurrentFile !== 'Not started') {
                    currentTask += `: ${activeFolder.CurrentFile}`;
                }
            }
        }


        document.getElementById('convertedCount').textContent = totalConverted;
        document.getElementById('failedCount').textContent = totalFailed;
        document.getElementById('totalCount').textContent = totalConverted + totalFailed;


        const progressPercent = totalFiles > 0 ? ((totalConverted + totalFailed) / totalFiles * 100) : 0;
        document.getElementById('progressBar').style.width = Math.min(progressPercent, 100) + '%';
        document.getElementById('progressPercent').textContent = Math.round(progressPercent) + '%';


        document.getElementById('currentTask').textContent = currentTask;


        if (Math.random() < 0.1 && totalFiles > 0) {
            addLog(`Progress: ${totalConverted + totalFailed}/${totalFiles} files (${Math.round(progressPercent)}%)`, 'info');
        }
    }

    function completeConversion(progressData) {
        console.log('Conversion completed');
        clearInterval(conversionInterval);
        isConverting = false;

        addLog('Conversion process completed!', 'success');


        let totalConverted = 0;
        let totalFailed = 0;

        if (progressData.overallProgress && progressData.overallProgress.length > 0) {
            progressData.overallProgress.forEach(account => {
                totalConverted += account.ConvertedFiles || 0;
                totalFailed += account.FailedFiles || 0;
            });
        }


        setTimeout(() => {
            document.getElementById('progressSection').style.display = 'none';
            document.getElementById('resultsSection').style.display = 'block';


            document.getElementById('finalTotal').textContent = totalConverted;


            showAlert(
                'Conversion Completed!',
                `All images have been processed successfully!\n\nConverted: ${totalConverted} files\nFailed: ${totalFailed} files`,
                'success',
                'View Results'
            ).then(() => {

                setTimeout(() => {
                    window.location.reload();
                }, 1000);
            });
        }, 2000);
    }

    function addLog(message, type = 'info') {
        const logsContainer = document.getElementById('liveLogs');
        if (!logsContainer) {
            console.error('Live logs container not found!');
            return;
        }

        const logEntry = document.createElement('div');
        logEntry.className = `log-entry ${type}`;

        const timestamp = new Date().toLocaleTimeString();
        logEntry.innerHTML = `[${timestamp}] ${message}`;

        logsContainer.appendChild(logEntry);
        logsContainer.scrollTop = logsContainer.scrollHeight;

        console.log(`[${type.toUpperCase()}] ${message}`);
    }

    function resetUI() {
        isConverting = false;
        const startBtn = document.getElementById('startConversion');
        if (startBtn) {
            startBtn.disabled = false;
            startBtn.innerHTML = '🚀 Start Conversion Process';
        }
        document.getElementById('loader').style.display = 'none';
    }


    window.startConversion = startConversion;
    window.showAlert = showAlert;
    window.closeCustomAlert = closeCustomAlert;


  
async function downloadConversionReport() {
    const downloadBtn = document.getElementById('downloadExcel');
    const downloadInfo = document.getElementById('downloadInfo');

    try {
        
        downloadBtn.disabled = true;
        downloadBtn.innerHTML = '⏳ Generating Report...';

     
        Swal.fire({
            title: 'Generating Report',
            text: 'Please wait while we prepare your Excel report...',
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });

       
        const response = await fetch('@Url.Action("DownloadConversionProgress", "ImageUpload")', {
            method: 'GET',
            headers: {
                'Accept': 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet',
                'X-Requested-With': 'XMLHttpRequest'
            }
        });

        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }

     
        const blob = await response.blob();

        
        if (blob.size === 0) {
            throw new Error('Empty response from server');
        }

   
        const contentType = response.headers.get('content-type');
        if (!contentType || !contentType.includes('spreadsheet')) {
            
            const text = await blob.text();
            try {
                const errorData = JSON.parse(text);
                throw new Error(errorData.error || 'Unknown error occurred');
            } catch (e) {
                throw new Error('Invalid response format');
            }
        }

      
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');

   
        let filename = `Conversion_Report_${new Date().toISOString().slice(0,10)}.xlsx`;
        const contentDisposition = response.headers.get('content-disposition');
        if (contentDisposition) {
            const filenameMatch = contentDisposition.match(/filename[^;=\n]*=((['"]).*?\2|[^;\n]*)/);
            if (filenameMatch && filenameMatch[1]) {
                filename = filenameMatch[1].replace(/['"]/g, '');
            }
        }

        a.href = url;
        a.download = filename;
        document.body.appendChild(a);
        a.click();

      
        window.URL.revokeObjectURL(url);
        document.body.removeChild(a);

        Swal.fire({
            icon: 'success',
            title: 'Download Started!',
            text: 'Your Excel report is being downloaded.',
            timer: 3000,
            showConfirmButton: false
        });

        downloadInfo.textContent = 'Report downloaded successfully!';

    } catch (error) {
        console.error('Download error:', error);

       
        Swal.fire({
            icon: 'error',
            title: 'Download Failed',
            text: error.message || 'Failed to download report. Please try again.',
            confirmButtonText: 'OK'
        });

        downloadInfo.textContent = 'Error: ' + (error.message || 'Failed to download');

    } finally {
       
        downloadBtn.disabled = false;
        downloadBtn.innerHTML = '📊 Download Excel Report';

        
        setTimeout(() => {
            downloadInfo.textContent = '';
        }, 5000);
    }
}


function downloadWithProgress() {
    const downloadBtn = document.getElementById('downloadExcel');

    Swal.fire({
        title: 'Preparing Report',
        html: `
            <div class="swal2-progress-container">
                <div class="swal2-progress-bar">
                    <div class="swal2-progress-fill" id="swalProgress"></div>
                </div>
                <div class="swal2-progress-text" id="swalProgressText">Initializing...</div>
            </div>
        `,
        allowOutsideClick: false,
        showConfirmButton: false,
        didOpen: () => {
            
            let progress = 0;
            const progressInterval = setInterval(() => {
                progress += 10;
                const progressBar = document.getElementById('swalProgress');
                const progressText = document.getElementById('swalProgressText');

                if (progressBar && progressText) {
                    progressBar.style.width = `${progress}%`;
                    progressText.textContent = `Processing... ${progress}%`;
                }

                if (progress >= 100) {
                    clearInterval(progressInterval);
                }
            }, 200);

           
            downloadConversionReport().finally(() => {
                clearInterval(progressInterval);
            });
        }
    });
}


function downloadWithConfirmation() {
    Swal.fire({
        title: 'Download Conversion Report?',
        text: 'This will generate an Excel file with all conversion progress data.',
        icon: 'question',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, Download!',
        cancelButtonText: 'Cancel',
        reverseButtons: true
    }).then((result) => {
        if (result.isConfirmed) {
            downloadConversionReport();
        }
    });
}


document.addEventListener('DOMContentLoaded', function() {
