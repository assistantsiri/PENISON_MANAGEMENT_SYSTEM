@section Scripts {
    <script>

        var currentImageIndex = 0;
        var currentImageFiles = [];
        var currentAccountNumber = '';
        var currentDpCode = '';

        $(document).ready(function() {

            $('.view-images-btn').on('click', function() {
                currentAccountNumber = $(this).data('account');
                currentDpCode = $(this).data('dpcode');
                var fileNamesString = $(this).data('filenames');


                currentImageFiles = fileNamesString.split(',');
                currentImageIndex = 0;


                $('.image-display-frame').show();
                $('#currentAccountNumber').text(currentAccountNumber);


                if (currentImageFiles.length > 1) {
                    $('#imageNavigation').show();
                } else {
                    $('#imageNavigation').hide();
                }


                loadImage(currentImageIndex);
            });


            $('#nextImage').on('click', function() {
                if (currentImageIndex < currentImageFiles.length - 1) {
                    currentImageIndex++;
                    loadImage(currentImageIndex);
                }
            });


            $('#prevImage').on('click', function() {
                if (currentImageIndex > 0) {
                    currentImageIndex--;
                    loadImage(currentImageIndex);
                }
            });


            $('.close-viewer').on('click', function() {
                $('.image-display-frame').hide();
            });


            function loadImage(index) {
                if (index < 0 || index >= currentImageFiles.length) return;

                var fileName = currentImageFiles[index];


                $('#loadingSpinner').show();
                $('#displayedImage').hide();
                $('#imageError').hide();


                var imageUrl = '@Url.Action("GetImage", "ImageUpload")' +
                               '?fileName=' + encodeURIComponent(fileName) +
                               '&dpCode=' + encodeURIComponent(currentDpCode);


                $('#imageCounter').text((index + 1) + ' of ' + currentImageFiles.length);


                $('#imageInfo').text('File: ' + fileName);


                var img = new Image();
                img.onload = function() {
                    $('#displayedImage').attr('src', imageUrl).show();
                    $('#loadingSpinner').hide();
                    $('#imageError').hide();


                    $('#prevImage').prop('disabled', index === 0);
                    $('#nextImage').prop('disabled', index === currentImageFiles.length - 1);
                };
                img.onerror = function() {
                    $('#displayedImage').hide();
                    $('#loadingSpinner').hide();
                    $('#imageError').show().text('Image not found: ' + fileName);


                    $('#prevImage').prop('disabled', index === 0);
                    $('#nextImage').prop('disabled', index === currentImageFiles.length - 1);
                };
                img.src = imageUrl;
            }


            $('.view-images-btn').on('click', function() {
                $('html, body').animate({
                    scrollTop: $('.image-display-frame').offset().top
                }, 500);
            });
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const alertCard = document.getElementById('alertCard');
            const tryAgainBtn = document.getElementById('tryAgainBtn');
            const successMessage = document.getElementById('successMessage');

            tryAgainBtn.addEventListener('click', function () {

                alertCard.classList.add('close-card');
                setTimeout(function () {
                    alertCard.classList.add('hidden');
                    successMessage.classList.remove('hidden');
                    setTimeout(function () {
                        successMessage.classList.add('hidden');
                        alertCard.classList.remove('hidden', 'close-card');
                    }, 3000);
                }, 300);
            });
        });
    </script>

