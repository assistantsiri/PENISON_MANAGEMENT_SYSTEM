                                            data-account="@account.PPA_ACNO"
                                            data-dpcode="@account.PPA_DPCD"
                                            data-filenames="@string.Join(",", account.ImagePaths.Select(Path.GetFileName))">
                                        View Images
                                    </button>
                                }
                                else
                                {
                                    <span class="text-danger">No images</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


        if (Model.TotalPages > 1)
        {
            <div class="pagination-container">
                <ul class="pagination">
                    @if (Model.CurrentPage > 1)
                    {
                        <li>@Html.ActionLink("« First", "PPADETAILSWITHIMAGE", new { searchAccountNumber = Model.SearchTerm, bankType = Model.SelectedBankType, page = 1 })</li>
                        <li>@Html.ActionLink("‹ Prev", "PPADETAILSWITHIMAGE", new { searchAccountNumber = Model.SearchTerm, bankType = Model.SelectedBankType, page = Model.CurrentPage - 1 })</li>
                    }

                    @{
                        int startPage = Math.Max(1, Model.CurrentPage - 2);
                        int endPage = Math.Min(Model.TotalPages, startPage + 4);
                        if (endPage - startPage < 4)
                        {
                            startPage = Math.Max(1, endPage - 4);
                        }
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="@(i == Model.CurrentPage ? "active" : "")">
                            @Html.ActionLink(i.ToString(), "PPADETAILSWITHIMAGE", new { searchAccountNumber = Model.SearchTerm, bankType = Model.SelectedBankType, page = i })
                        </li>
                    }

                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <li>@Html.ActionLink("Next ›", "PPADETAILSWITHIMAGE", new { searchAccountNumber = Model.SearchTerm, bankType = Model.SelectedBankType, page = Model.CurrentPage + 1 })</li>
                        <li>@Html.ActionLink("Last »", "PPADETAILSWITHIMAGE", new { searchAccountNumber = Model.SearchTerm, bankType = Model.SelectedBankType, page = Model.TotalPages })</li>
                    }
                </ul>
                <div class="pagination-info">
                    Showing @((Model.CurrentPage - 1) * 10 + 1) to @(Math.Min(Model.CurrentPage * 10, Model.TotalItems)) of @Model.TotalItems entries
                </div>
            </div>
