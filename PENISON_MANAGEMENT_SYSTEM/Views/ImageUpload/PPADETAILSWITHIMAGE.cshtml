                        <th>PPO Number</th>
                        <th>Name</th>
                        <th>DP Code</th>
                        @*<th>Type</th>*@
                        <th>Bank Type</th>
                        @*<th>Calculated DP Code</th>*@
                        <th>Images Found</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
