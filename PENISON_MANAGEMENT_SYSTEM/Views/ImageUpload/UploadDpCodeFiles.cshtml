@using (Html.BeginForm("UploadDpCodeFiles", "ImageUpload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="mb-3">
        <label class="form-label"><i class="fa-solid fa-list"></i> Select Department</label>
        @Html.DropDownList("department", new SelectList(new[] { "Railway", "Civil", "Postal", "Telecom", "OtherState" }), "-- Select --", new { @class = "form-control", required = "required" })
    </div>

    <div class="mb-3">
        <label class="form-label"><i class="fa-solid fa-folder-open"></i> Select Folder(s)</label>
        <input type="file" name="files" multiple webkitdirectory directory class="form-control" required />
        <small class="form-text text-muted">Folder upload only supported in Chrome/Edge.</small>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success px-4">
            <i class="fa-solid fa-cloud-arrow-up"></i> Upload
        </button>
    </div>

    <br />
    <span style="color:red">@ViewBag.Message</span>
}
