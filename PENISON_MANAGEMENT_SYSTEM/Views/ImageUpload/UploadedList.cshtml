@model List<PENISON_MANAGEMENT_SYSTEM.Models.Imageupload>
@{
    ViewBag.Title = "Uploaded PDF List";
}
<link href="~/assets/css/VIEWUPLOADEDPDF.css" rel="stylesheet" />
<link href="~/assets/Awesome/fontawesome-free-6.1.1-web/css/all.min.css" rel="stylesheet" />
<link href="~/assets/Animate/animate.min.css" rel="stylesheet" />

<style>
    /* Modern color scheme with gradients */
    :root {
        --primary: #4361ee;
        --primary-light: #4cc9f0;
        --secondary: #3a0ca3;
        --success: #4bb543;
        --warning: #f8961e;
        --danger: #f94144;
        --light: #f8f9fa;
        --dark: #212529;
        --gray: #6c757d;
        --light-gray: #e9ecef;
        --card-bg: linear-gradient(145deg, #ffffff, #f8f9fa);
        --header-gradient: linear-gradient(135deg, var(--primary), var(--secondary));
        --button-gradient: linear-gradient(135deg, var(--primary), var(--primary-light));
    }

    /* Base styles */
    body {
        font-family: 'Segoe UI', sans-serif;
        background: #f5f7fb;
        margin: 0;
        padding: 20px;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .container-fluid {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    /* Main container */
    .main-container {
        display: flex;
        gap: 20px;
        flex: 1;
        min-height: 0;
        height: calc(100vh - 120px); /* Account for header and padding */
    }

    .table-section {
        flex: 0 0 45%;
        background: white;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        min-width: 0;
    }

    .pdf-viewer-section {
        flex: 1;
        background: white;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        min-height: 0;
    }

    /* Card styling */
    .pdf-card {
        border: none;
        border-radius: 16px;
        overflow: hidden;
        background: var(--card-bg);
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .card-header {
        background: var(--header-gradient);
        color: white;
        padding: 1.5rem 2rem;
        border-bottom: none;
        flex-shrink: 0;
    }

        .card-header h2 {
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 1.5rem;
        }

    /* Badge styling */
    .badge-count {
        background-color: rgba(255, 255, 255, 0.9);
        color: var(--primary);
        font-weight: 600;
        padding: 0.35rem 0.75rem;
        border-radius: 50px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Buttons */
    .btn-excel-upload {
        background: linear-gradient(135deg, #21a366, #10793f);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 0.8rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 4px 12px rgba(33, 163, 102, 0.3);
        font-size: 0.9rem;
    }

    .download-all-btn {
        background: linear-gradient(135deg, var(--success), #3aa73a);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 0.8rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 4px 12px rgba(75, 181, 67, 0.3);
        font-size: 0.9rem;
    }

        .btn-excel-upload:hover,
        .download-all-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

    /* Search bar */
    .search-filter-bar {
        background: rgba(255, 255, 255, 0.9);
        padding: 1.25rem;
        border-radius: 12px;
        margin: 1rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        flex-shrink: 0;
    }

    .search-box {
        position: relative;
    }

    .search-input {
        width: 100%;
        padding: 0.85rem 1.25rem 0.85rem 50px;
        border: 2px solid rgba(67, 97, 238, 0.1);
        border-radius: 12px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        background-color: rgba(255, 255, 255, 0.8);
    }

        .search-input:focus {
            outline: none;
            border-color: var(--primary-light);
            box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.15);
        }

    .search-icon {
        position: absolute;
        left: 20px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--primary);
    }

    /* Bulk actions */
    .bulk-actions {
        background: linear-gradient(135deg, rgba(67, 97, 238, 0.15), rgba(58, 12, 163, 0.15));
        padding: 1rem 1.5rem;
        border-radius: 12px;
        margin: 0 1rem 1rem;
        display: none;
        justify-content: space-between;
        align-items: center;
        flex-shrink: 0;
    }

        .bulk-actions.active {
            display: flex;
        }

    .selected-count {
        font-weight: 600;
        color: var(--primary);
        font-size: 0.95rem;
    }

    .bulk-btn {
        background: var(--button-gradient);
        color: white;
        border: none;
        border-radius: 10px;
        padding: 0.7rem 1.4rem;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
    }

    /* Table container with fixed height and scroll */
    .table-container-wrapper {
        flex: 1;
        display: flex;
        flex-direction: column;
        min-height: 0;
        padding: 0 1rem;
    }

    .table-container {
        flex: 1;
        overflow: auto;
        border: 1px solid #e9ecef;
        border-radius: 12px;
        background: white;
        margin-bottom: 1rem;
    }

    .pdf-table {
        width: 100%;
        border-collapse: collapse;
        margin: 0;
    }

        .pdf-table thead th {
            background: linear-gradient(135deg, rgba(67, 97, 238, 0.1), rgba(67, 97, 238, 0.05));
            color: var(--primary);
            font-weight: 600;
            padding: 1rem 1.25rem;
            border-bottom: 2px solid rgba(67, 97, 238, 0.1);
            position: sticky;
            top: 0;
            z-index: 10;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .pdf-table tbody tr {
            transition: all 0.3s ease;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

            .pdf-table tbody tr:hover {
                background-color: rgba(67, 97, 238, 0.03);
                transform: translateX(2px);
            }

            .pdf-table tbody tr.selected {
                background-color: rgba(67, 97, 238, 0.1);
            }

        .pdf-table tbody td {
            padding: 1rem 1.25rem;
            vertical-align: middle;
            font-size: 0.9rem;
        }

    /* Checkbox */
    .select-checkbox {
        width: 18px;
        height: 18px;
        cursor: pointer;
        border: 2px solid rgba(67, 97, 238, 0.3);
        border-radius: 4px;
        position: relative;
    }

        .select-checkbox:checked {
            background-color: var(--primary);
            border-color: var(--primary);
        }

            .select-checkbox:checked::after {
                content: '✓';
                position: absolute;
                color: white;
                font-size: 10px;
                font-weight: bold;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }

    /* PDF item */
    .pdf-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .pdf-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, rgba(67, 97, 238, 0.1), rgba(76, 201, 240, 0.1));
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary);
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .pdf-name {
        font-weight: 600;
        color: var(--dark);
        font-size: 0.95rem;
    }

    .pdf-meta {
        font-size: 0.8rem;
        color: var(--gray);
        margin-top: 2px;
    }

    /* File badge */
    .file-badge {
        background: linear-gradient(135deg, rgba(67, 97, 238, 0.1), rgba(76, 201, 240, 0.1));
        color: var(--primary);
        padding: 0.4rem 0.8rem;
        border-radius: 8px;
        font-size: 0.8rem;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }

    /* Action buttons */
    .action-btns {
        display: flex;
        gap: 0.5rem;
    }

    .btn-view {
        background: var(--button-gradient);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 0.5rem 1rem;
        font-size: 0.8rem;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        transition: all 0.3s ease;
        font-weight: 500;
    }

        .btn-view:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(67, 97, 238, 0.3);
        }

    /* PDF Viewer Section */
    .pdf-viewer-header {
        background: var(--header-gradient);
        color: white;
        padding: 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-shrink: 0;
    }

        .pdf-viewer-header h3 {
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 1.3rem;
        }

    .pdf-controls {
        display: flex;
        gap: 0.5rem;
    }

    .pdf-control-btn {
        background: rgba(255, 255, 255, 0.2);
        border: none;
        color: white;
        padding: 0.6rem 1rem;
        border-radius: 8px;
        display: flex;
        align-items: center;
        gap: 5px;
        transition: all 0.3s ease;
        font-size: 0.9rem;
        font-weight: 500;
    }

        .pdf-control-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-1px);
        }

    .pdf-viewer-content {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f8f9fa;
        position: relative;
        min-height: 0;
        height: 100%;
    }

    .pdf-placeholder {
        text-align: center;
        color: var(--gray);
        padding: 3rem;
    }

        .pdf-placeholder i {
            font-size: 4rem;
            margin-bottom: 1rem;
            color: var(--primary-light);
            opacity: 0.5;
        }

        .pdf-placeholder h4 {
            margin-bottom: 0.5rem;
            color: var(--dark);
        }

        .pdf-placeholder p {
            margin: 0;
            font-size: 0.95rem;
        }

    #pdfViewerFrame {
        width: 100%;
        height: 100%;
        border: none;
        border-radius: 0 0 16px 16px;
        background: white;
    }

    .pdf-loading {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.95);
        z-index: 20;
    }

    .spinner {
        width: 50px;
        height: 50px;
        border: 4px solid #f3f3f3;
        border-top: 4px solid var(--primary);
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin-bottom: 1rem;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    /* Empty state */
    .empty-state {
        padding: 3rem;
        text-align: center;
        color: var(--gray);
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            color: var(--primary-light);
            opacity: 0.5;
        }

    /* DataTables Pagination Styling */
    .dataTables_wrapper {
        flex: 1;
        display: flex;
        flex-direction: column;
        min-height: 0;
    }

    .dataTables_paginate {
        margin-top: auto;
        padding: 1rem;
        border-top: 1px solid #e9ecef;
        background: white;
        flex-shrink: 0;
    }

    .paginate_button {
        border: 1px solid #dee2e6 !important;
        padding: 0.5rem 0.9rem !important;
        margin: 0 0.2rem !important;
        border-radius: 8px !important;
        color: var(--dark) !important;
        font-weight: 500 !important;
        transition: all 0.3s ease !important;
    }

        .paginate_button:hover {
            background: var(--button-gradient) !important;
            color: white !important;
            border-color: var(--primary) !important;
            transform: translateY(-1px);
        }

        .paginate_button.current {
            background: var(--button-gradient) !important;
            color: white !important;
            border-color: var(--primary) !important;
        }

    /* Custom scrollbar for table */
    .table-container::-webkit-scrollbar {
        width: 8px;
        height: 8px;
    }

    .table-container::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 4px;
    }

    .table-container::-webkit-scrollbar-thumb {
        background: var(--primary);
        border-radius: 4px;
    }

        .table-container::-webkit-scrollbar-thumb:hover {
            background: var(--primary-dark);
        }

    /* Footer Styles */
    .page-footer {
        margin-top: auto;
        padding: 1rem 0;
        text-align: center;
        color: var(--gray);
        font-size: 0.9rem;
        border-top: 1px solid #e9ecef;
        background: white;
        flex-shrink: 0;
    }

    /* Responsive */
    @@media (max-width: 1024px) {
        .main-container {
            flex-direction: column;
            height: auto;
            min-height: auto;
        }

        .table-section {
            flex: 0 0 400px;
        }

        .pdf-viewer-section {
            flex: 1;
            min-height: 500px;
        }
    }

    @@media (max-width: 768px) {
        body {
            padding: 10px;
        }

        .main-container {
            height: calc(100vh - 80px);
        }

        .card-header {
            padding: 1rem 1.5rem;
        }

            .card-header h2 {
                font-size: 1.3rem;
            }

        .btn-excel-upload,
        .download-all-btn {
            padding: 0.6rem 1rem;
            font-size: 0.8rem;
        }

        .page-footer {
            padding: 0.5rem 0;
            font-size: 0.8rem;
        }
    }
</style>

<div class="container-fluid">
    <div class="main-container">
        <!-- Table Section -->
        <div class="table-section">
            <div class="pdf-card">
                <div class="card-header d-flex justify-content-between align-items-center flex-wrap">
                    <h2><i class="fas fa-file-pdf me-2"></i> PDF DOCUMENTS</h2>
                    <div class="d-flex align-items-center flex-wrap gap-3 mt-2 mt-md-0">
                        <span class="badge-count">
                            <i class="fas fa-database me-1"></i> @Model.Count Files
                        </span>
                        <button class="btn-excel-upload" onclick="showExcelUploadModal()">
                            <i class="fas fa-file-excel"></i> Upload Excel
                        </button>
                        <button class="download-all-btn" onclick="downloadAllFolders()">
                            <i class="fas fa-cloud-download-alt"></i> Download All
                        </button>
                    </div>
                </div>

                <div class="card-body" style="padding: 0; display: flex; flex-direction: column; height: 100%;">
                    <!-- Bulk Actions -->
                    <div class="bulk-actions" id="bulkActionsToolbar">
                        <div>
                            <span class="selected-count" id="selectedCount">0</span> documents selected
                        </div>
                        <div>
                            <button class="bulk-btn" id="bulkDownloadBtn">
                                <i class="fas fa-download"></i> Download Selected
                            </button>
                        </div>
                    </div>

                    <!-- Search -->
                    <div class="search-filter-bar">
                        <div class="search-box">
                            <i class="fas fa-search search-icon"></i>
                            <input type="text" id="accountSearch" class="search-input" placeholder="Search by account number..." />
                        </div>
                    </div>

                    @if (Model.Any())
                    {
                        <div class="table-container-wrapper">
                            <div class="table-container">
                                <table class="pdf-table" id="pdfTable">
                                    <thead>
                                        <tr>
                                            <th style="width: 40px;">
                                                <input type="checkbox" class="select-checkbox" id="selectAll" />
                                            </th>
                                            <th>DOCUMENT</th>
                                            <th>SIZE</th>
                                            <th>UPLOAD DATE</th>
                                            <th>UPLOADED BY</th>
                                            <th style="width: 100px;">ACTIONS</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr data-account="@item.Accountnumber">
                                                <td>
                                                    <input type="checkbox" class="select-checkbox" data-account="@item.Accountnumber" />
                                                </td>
                                                <td>
                                                    <div class="pdf-item">
                                                        <!--<div class="pdf-icon">-->
                                                        @*<i class="fas fa-file-pdf"></i>*@
                                                        <!--</div>-->

                                                        <div class="pdf-info">
                                                            <div class="pdf-name"><i class="fas fa-file-pdf" style="color:red"></i>    @item.Accountnumber</div>
                                                            <div class="pdf-meta">PDF Document</div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="file-badge">
                                                        @*<i class="fas fa-hdd"></i>*@
                                                        <span class="file-size-value">@item.FILESIZE</span>
                                                    </span>
                                                </td>
                                                <td>@item.UPLOADEDDATE</td>
                                                <td>@item.UPLOADEDBY</td>
                                                <td>
                                                    <div class="action-btns">
                                                        <button class="btn-view" onclick="viewPdf('@item.Accountnumber')">
                                                            <i class="fas fa-eye"></i> View
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- DataTables will automatically add pagination here -->
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-folder-open"></i>
                            <h5>No PDF Documents Found</h5>
                            <p>There are no uploaded PDF documents to display at this time.</p>
                            <button class="btn-view" onclick="location.reload()" style="margin-top: 1rem;">
                                <i class="fas fa-sync-alt"></i> Refresh
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- PDF Viewer Section -->
        <div class="pdf-viewer-section">
            <div class="pdf-card">
                <div class="pdf-viewer-header">
                    <h3><i class="fas fa-eye me-2"></i> PDF VIEWER</h3>
                    <div class="pdf-controls">
                        <button class="pdf-control-btn" id="downloadPdfBtn" style="display: none;">
                            <i class="fas fa-download"></i> Download
                        </button>
                        <button class="pdf-control-btn" id="printPdfBtn" style="display: none;">
                            <i class="fas fa-print"></i> Print
                        </button>
                    </div>
                </div>
                <div class="pdf-viewer-content">
                    <div class="pdf-placeholder" id="pdfPlaceholder">
                        <i class="fas fa-file-pdf"></i>
                        <h4>No PDF Selected</h4>
                        <p>Click "View" on any document to display it here</p>
                    </div>
                    <div class="pdf-loading" id="pdfLoading" style="display: none;">
                        <div class="spinner"></div>
                        <p style="font-size: 1.1rem; font-weight: 500; color: var(--dark); margin-top: 1rem;">Loading PDF Document...</p>
                    </div>
                    <iframe id="pdfViewerFrame" style="display: none;"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Excel Upload Modal -->
<div class="modal fade" id="excelUploadModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fas fa-file-excel me-2"></i> Upload Excel File</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="excelUploadForm" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="excelFile" class="form-label">Select Excel File</label>
                        <input class="form-control" type="file" id="excelFile" name="excelFile" accept=".xlsx,.xls" required>
                        <div class="form-text">Excel file should contain account numbers in the first column</div>
                    </div>
                    <div class="progress mb-3 d-none" id="uploadProgress">
                        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="uploadExcelBtn" onclick="uploadExcelFile()">
                    <i class="fas fa-upload me-1"></i> Upload & Process
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/JQUERY/jquery-3.6.0/dist/jquery.min.js"></script>
<script src="~/assets/JQUERY/jquery.dataTables.min.js"></script>
<script src="~/assets/Bootstrap/dataTables.bootstrap5.min.js"></script>
<script src="~/assets/Bootstrap/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {

        var table = $('#pdfTable').DataTable({
            responsive: true,
            paging: true,
            pageLength: 10,
            lengthMenu: [5, 10, 25, 50],
            language: {
                search: "",
                searchPlaceholder: "Search documents...",
                lengthMenu: "Show _MENU_ documents",
                info: "Showing _START_ to _END_ of _TOTAL_ documents",
                infoEmpty: "No documents available",
                infoFiltered: "(filtered from _MAX_ total documents)",
                paginate: {
                    first: "<i class='fas fa-angle-double-left'></i>",
                    last: "<i class='fas fa-angle-double-right'></i>",
                    next: "<i class='fas fa-chevron-right'></i>",
                    previous: "<i class='fas fa-chevron-left'></i>"
                }
            },
            dom: '<"top"<"row"<"col-md-6"l><"col-md-6"f>>>rt<"bottom"<"row"<"col-md-6"i><"col-md-6"p>>><"clear">',
            initComplete: function () {
                $('.dataTables_filter input').attr('placeholder', 'Search documents...');
            }
        });

        $('#accountSearch').on('keyup', function() {
            table.search(this.value).draw();
        });

        $('#selectAll').on('change', function() {
            var isChecked = $(this).is(':checked');
            $('.select-checkbox').prop('checked', isChecked);
            updateBulkActionsToolbar();
        });

        $(document).on('change', '.select-checkbox', function() {
            var row = $(this).closest('tr');
            if ($(this).is(':checked')) {
                row.addClass('selected');
            } else {
                row.removeClass('selected');
            }
            updateBulkActionsToolbar();
        });

        $('#bulkDownloadBtn').on('click', function() {
            var selectedAccounts = [];
            $('.select-checkbox:checked').each(function() {
                selectedAccounts.push($(this).data('account'));
            });

            if (selectedAccounts.length > 0) {
                downloadSelectedAccounts(selectedAccounts);
            } else {
                alert('Please select at least one document to download.');
            }
        });

        $('.file-size-value').each(function() {
            var sizeText = $(this).text();
            if (sizeText.match(/^\d+$/)) {
                var bytes = parseInt(sizeText);
                $(this).text(formatFileSize(bytes));
            }
        });
    });

    function viewPdf(accountNumber) {
        const viewUrl = '@Url.Action("ViewMergedPdf", "ImageUpload")' + '?accountNumber=' + accountNumber + '&download=false';
        const downloadUrl = '@Url.Action("ViewMergedPdf", "ImageUpload")' + '?accountNumber=' + accountNumber + '&download=true';

        document.getElementById('pdfLoading').style.display = 'flex';
        document.getElementById('pdfPlaceholder').style.display = 'none';
        document.getElementById('pdfViewerFrame').style.display = 'none';

        document.getElementById('downloadPdfBtn').style.display = 'flex';
        document.getElementById('printPdfBtn').style.display = 'flex';

        document.getElementById('downloadPdfBtn').onclick = function() {
            window.open(downloadUrl, '_blank');
        };

        document.getElementById('printPdfBtn').onclick = function() {
            const printWindow = window.open(viewUrl, '_blank');
            printWindow.onload = function() {
                printWindow.print();
            };
        };

        const pdfFrame = document.getElementById('pdfViewerFrame');
        pdfFrame.src = viewUrl;

        pdfFrame.onload = function() {
            document.getElementById('pdfLoading').style.display = 'none';
            document.getElementById('pdfViewerFrame').style.display = 'block';
        };

        pdfFrame.onerror = function() {
            document.getElementById('pdfLoading').style.display = 'none';
            document.getElementById('pdfPlaceholder').innerHTML = `
                <i class="fas fa-exclamation-triangle" style="color: #ef4444; font-size: 3rem;"></i>
                <h4 style="color: #ef4444; margin: 1rem 0 0.5rem 0;">Failed to load PDF</h4>
                <p>Please try again</p>
                <button class="btn-view" onclick="viewPdf('${accountNumber}')" style="margin-top: 1rem;">
                    <i class="fas fa-redo"></i> Retry
                </button>
            `;
            document.getElementById('pdfPlaceholder').style.display = 'block';
        };
    }

    function updateBulkActionsToolbar() {
        const selectedCount = $('.select-checkbox:checked').length;
        const toolbar = $('#bulkActionsToolbar');

        if (selectedCount > 0) {
            $('#selectedCount').text(selectedCount);
            toolbar.addClass('active');
        } else {
            toolbar.removeClass('active');
        }
    }

    function downloadSelectedAccounts(accountNumbers) {
        const form = $('<form>', {
            action: '@Url.Action("DownloadSelectedAccounts", "ImageUpload")',
            method: 'POST',
            style: 'display: none;'
        });

        accountNumbers.forEach(function(accountNumber) {
            form.append($('<input>', {
                type: 'hidden',
                name: 'accountNumbers',
                value: accountNumber
            }));
        });

        $('body').append(form);
        form.submit();
        form.remove();
    }

    function formatFileSize(bytes) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const sizes = ['Bytes', 'KB', 'MB', 'GB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
    }

    function showExcelUploadModal() {
        $('#excelUploadForm')[0].reset();
        $('#uploadProgress').addClass('d-none').find('.progress-bar').css('width', '0%');
        $('#excelUploadModal').modal('show');
    }

    function uploadExcelFile() {
        const fileInput = $('#excelFile')[0];
        if (!fileInput.files.length) {
            alert('Please select an Excel file first');
            return;
        }

        const formData = new FormData();
        formData.append('excelFile', fileInput.files[0]);

        $('#uploadProgress').removeClass('d-none');
        const uploadBtn = $('#uploadExcelBtn');
        uploadBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i> Processing...');

        let progress = 0;
        const progressInterval = setInterval(() => {
            progress += 10;
            $('#uploadProgress .progress-bar').css('width', progress + '%');

            if (progress >= 100) {
                clearInterval(progressInterval);
                $('#excelUploadModal').modal('hide');
                alert('Excel file processed successfully!');
                uploadBtn.prop('disabled', false).html('<i class="fas fa-upload me-1"></i> Upload & Process');
            }
        }, 200);
    }

    function downloadAllFolders() {
        window.open('@Url.Action("DownloadAllFolders", "ImageUpload")', '_blank');
    }
</script>