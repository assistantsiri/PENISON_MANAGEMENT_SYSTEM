    <div class="container mt-4">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-primary text-white text-center rounded-top-4">
                <h3><i class="fa-solid fa-upload me-2"></i> Upload Folder</h3>
            </div>
            <div class="card-body p-4">

                @using (Html.BeginForm("UserUploadImage", "ImageUpload", FormMethod.Post, new { enctype = "multipart/form-data", @id = "uploadForm" }))
                {
                    <div class="mb-3">
                        <label class="form-label"><i class="fa-solid fa-folder-open"></i> Select Folder</label>
                        <input type="file" name="UploadedFiles" multiple webkitdirectory directory class="form-control" required />
                        <small class="form-text text-muted">Only supported in Chrome/Edge.</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><i class="fa-solid fa-list"></i> Account Type</label>
                        @Html.DropDownListFor(m => m.AccountType, (SelectList)ViewBag.AccountTypeList, "-- Select --", new { @class = "form-control", required = "required" })
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="fa-solid fa-cloud-arrow-up"></i> Upload
                        </button>
                    </div>
                }

                <div id="loader" class="text-center mt-3" style="display: none;">
                    <img src="~/Content/images/loader.gif" alt="Loading..." width="60" />
                    <p>Uploading, please wait...</p>
                </div>

                @if (TempData["Message"] != null)
                {
                    <div class="d-flex justify-content-center mt-4">
                        <div class="card text-white bg-success shadow rounded-4" style="width: 22rem;">
                            <div class="card-body text-center">
                                <h5 class="card-title">
                                    <i class="fa-solid fa-circle-check fa-lg me-2"></i>Success
                                </h5>
                                <p class="card-text">@TempData["Message"]</p>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
    @section Scripts {
        <script>
            document.getElementById("uploadForm").addEventListener("submit", function () {
                document.getElementById("loader").style.display = "block";
            });
        </script>
    }
