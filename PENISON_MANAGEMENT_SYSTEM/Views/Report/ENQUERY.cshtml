@{
    ViewBag.Title = "PMS Upload ChatBot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PMS Document Enquiry</title>

    <!-- Bootstrap CSS -->
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />*@
    <link href="~/assets/Bootstrap/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />*@
    <link href="~/assets/Awesome/fontawesome-free-6.1.1-web/css/all.css" rel="stylesheet" />
    <link href="~/assets/Awesome/fontawesome-free-6.1.1-web/css/all.min.css" rel="stylesheet" />
    <!-- Google Font -->
    @*<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />*@

    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3f37c9;
            --accent-color: #4cc9f0;
            --light-color: #f8f9fa;
            --dark-color: #212529;
            --success-color: #4bb543;
            --warning-color: #fca311;
            --danger-color: #ef233c;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }

        .chat-container {
            max-width: 900px;
            margin: 30px auto;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            height: 80vh;
            display: flex;
            flex-direction: column;
        }

        .chat-header {
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 20px;
            text-align: center;
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
        }

            .chat-header h3 {
                margin: 0;
                font-weight: 600;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 10px;
            }

        #chatWindow {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .message {
            max-width: 80%;
            padding: 12px 18px;
            border-radius: 18px;
            font-size: 14px;
            line-height: 1.5;
            animation: fadeIn 0.3s ease-in;
            position: relative;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        .user-message {
            background-color: var(--primary-color);
            color: white;
            align-self: flex-end;
            border-bottom-right-radius: 5px;
        }

        .bot-message {
            background-color: white;
            color: var(--dark-color);
            align-self: flex-start;
            border-bottom-left-radius: 5px;
            border: 1px solid #e9ecef;
        }

        .typing-indicator {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            padding: 10px 15px;
            background-color: white;
            border-radius: 18px;
            color: #6c757d;
            font-size: 13px;
            align-self: flex-start;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        .typing-dot {
            width: 8px;
            height: 8px;
            background-color: #adb5bd;
            border-radius: 50%;
            animation: typingAnimation 1.4s infinite ease-in-out;
        }

            .typing-dot:nth-child(1) {
                animation-delay: 0s;
            }

            .typing-dot:nth-child(2) {
                animation-delay: 0.2s;
            }

            .typing-dot:nth-child(3) {
                animation-delay: 0.4s;
            }

        .chat-input-container {
            padding: 15px;
            background-color: white;
            border-top: 1px solid #e9ecef;
            display: flex;
            gap: 10px;
        }

        #userInput {
            flex: 1;
            border-radius: 25px;
            padding: 12px 20px;
            border: 1px solid #ced4da;
            outline: none;
            transition: all 0.3s;
        }

            #userInput:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(67, 97, 238, 0.25);
            }

        #sendButton {
            border-radius: 50%;
            width: 50px;
            height: 50px;
            border: none;
            background-color: var(--primary-color);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s;
        }

            #sendButton:hover {
                background-color: var(--secondary-color);
                transform: scale(1.05);
            }

            #sendButton:active {
                transform: scale(0.95);
            }

        .record-item {
            background-color: white;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            border-left: 4px solid var(--primary-color);
        }

            .record-item h5 {
                color: var(--primary-color);
                margin-bottom: 10px;
                font-size: 16px;
            }

            .record-item p {
                margin: 5px 0;
                font-size: 13px;
            }

        .status-pending {
            color: var(--warning-color);
        }

        .status-approved {
            color: var(--success-color);
        }

        .status-rejected {
            color: var(--danger-color);
        }
    </style>
    <link href="~/assets/css/CHATBOTSTYLE.css" rel="stylesheet" />
</head>
<body>
    <div class="chat-container">
        <div class="chat-header">
            <h3><i class="fas fa-robot"></i> PMS Document Enquiry</h3>
        </div>

        <div id="chatWindow">
            <div class="bot-message">
                Welcome to PMS Document Enquiry!<br /><br />
                You can search by:<br />
                - Account Number<br />
                - PPANO<br />
                - Uploaded By<br />
                - Status (Pending/Approved/Rejected)<br />
                - DP Code<br /><br />
                Try searching for something like "PPANO 1234" or "Status Pending".
            </div>
        </div>
        @using (Html.BeginForm("ENQUERY", "Report", FormMethod.Post, new { id = "chatForm", @class = "chat-input-container" }))
        {
            @Html.AntiForgeryToken()
            <input type="text" id="userInput" name="message" class="form-control"
                   placeholder="Type your enquiry here..." required
                   aria-label="Search input" autocomplete="off" />
            <button type="submit" id="sendButton">
                <i class="fas fa-paper-plane"></i>
            </button>
        }
    </div>

    <!-- jQuery and Bootstrap JS -->
    @*<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>*@
    <script src="~/assets/JQUERY/jquery-3.6.0/dist/jquery.min.js"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/assets/Bootstrap/bootstrap.bundle.min.js"></script>
    <script>
        $(function () {
            // Handle form submission
            $('#chatForm').submit(function (e) {
                e.preventDefault();

                var message = $('#userInput').val().trim();
                if (!message) return;

                // Add user message to chat
                appendMessage(message, "user-message");
                $('#userInput').val('').focus();
                showTyping();

                // Get form data including anti-forgery token
                var formData = $(this).serialize();

                $.ajax({
                    url: $(this).attr('action'),
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        setTimeout(function () {
                            removeTyping();

                            if (response.success && response.data && response.data.length > 0) {
                                var html = `<div class="bot-message">
                                    <strong>Found ${response.count} records:</strong><br/><br/>`;

                                response.data.forEach(function (item) {
                                    html += `<div class="record-item">
                                        <h5>${item.FILENAME || 'No filename'}</h5>
                                        <p><strong>Account:</strong> ${item.Accountnumber || 'N/A'}</p>
                                        <p><strong>PPANO:</strong> ${item.PPANO || 'N/A'}</p>
                                        <p><strong>Status:</strong> ${item.STATUS || 'N/A'}</p>
                                        <p><small>Uploaded by ${item.UPLOADEDBY || 'N/A'} on ${formatDate(item.UPLOADEDDATE)}</small></p>
                                    </div>`;
                                });

                                html += `</div>`;
                                appendMessage(html, "bot-message");
                            } else {
                                appendMessage(response.error || "No matching records found", "bot-message");
                            }
                        }, 800);
                    },
                    error: function (xhr) {
                        removeTyping();
                        var errorMsg = "Error processing request";
                        try {
                            var json = JSON.parse(xhr.responseText);
                            errorMsg = json.error || json.message || errorMsg;
                        } catch (e) { }
                        appendMessage(errorMsg, "bot-message");
                    }
                });
            });

            // Helper functions
            function appendMessage(msg, cls) {
                $('#chatWindow').append($('<div>').addClass('message ' + cls).html(msg));
                scrollToBottom();
            }

            function showTyping() {
                $('#chatWindow').append(`
                    <div id="typing" class="typing-indicator">
                        <div class="typing-dot"></div>
                        <div class="typing-dot"></div>
                        <div class="typing-dot"></div>
                    </div>
                `);
                scrollToBottom();
            }

            function removeTyping() {
                $('#typing').remove();
            }

            function scrollToBottom() {
                var chat = $('#chatWindow')[0];
                chat.scrollTop = chat.scrollHeight;
            }

            function formatDate(dateStr) {
                if (!dateStr) return 'N/A';
                var date = new Date(dateStr);
                return isNaN(date) ? 'N/A' : date.toLocaleString();
            }
        });
    </script>
</body>
</html>