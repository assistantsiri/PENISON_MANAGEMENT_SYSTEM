        <i class="fas fa-bars"></i>
    </div>

   
    <header class="header">
        <div class="logo-container">
            <img src="@Url.Content("~/assets/images/CANARABANK.png")" alt="Canara Bank Logo" class="bank-logo" />
        </div>

        <h2>PENSION MANAGEMENT SYSTEM</h2>

        <div class="user-info">
            <img src="@Url.Content("~/assets/images/human-resources.gif")" alt="User Icon" class="user-icon" />
            <span class="user-text">@Session["STAFFNAME"] <span class="d-none d-md-inline">(@Session["STAFFNO"])</span></span>
