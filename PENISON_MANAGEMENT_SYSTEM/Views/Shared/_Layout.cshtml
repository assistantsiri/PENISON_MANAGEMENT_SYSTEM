        <a href="@Url.Action("Index", "Gallery")">
            <i class="fas fa-list" style="color: #FF9A9E"></i> <span>VIEW EXISTING IMAGES</span>
        </a>
        <a href="@Url.Action("Register", "User")">
            <i class="fas fa-user-plus" style="color: #FF6B6B"></i> <span>NEW REGISTER </span>
