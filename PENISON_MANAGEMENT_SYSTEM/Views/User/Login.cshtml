            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        window.refreshCaptcha = function () {
            const captchaImage = document.getElementById('captchaImage');
            captchaImage.src = '@Url.Action("GetCaptcha", "Captcha")?t=' + new Date().getTime();
        }

        window.closeMessage = function () {
            const notification = document.getElementById('Logoutsuccessmessage');
            if (notification) {
                notification.style.animation = 'slideOut 0.5s forwards';
                setTimeout(() => notification.remove(), 500);
            }
        }

        window.closeMessageError = function () {
            const notification = document.getElementById('errormessage');
            if (notification) {
                notification.style.animation = 'slideOut 0.5s forwards';
                setTimeout(() => notification.remove(), 500);
            }
        }

        const alertType = '@TempData["AlertType"]';
        const alertMessage = '@TempData["AlertMessage"]';
        const alertDetails = '@TempData["AlertDetails"]';
        if (alertType && alertMessage) {
            Swal.fire({
                icon: alertType,
                title: alertMessage,
                html: alertDetails ? alertDetails : '',
                confirmButtonColor: '#3085d6'
