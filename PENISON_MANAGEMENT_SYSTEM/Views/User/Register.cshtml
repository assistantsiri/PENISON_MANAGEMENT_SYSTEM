            <div class="register-body">
                @using (Html.BeginForm("Register", "User", FormMethod.Post, new { id = "registerForm", autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(m => m.StaffNo, new { @class = "form-label" })
                        <div class="input-group">
                            <i class="fas fa-id-card input-icon"></i>
