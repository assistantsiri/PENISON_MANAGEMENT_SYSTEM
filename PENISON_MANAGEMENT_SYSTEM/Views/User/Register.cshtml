                            <i class="fas fa-lock input-icon"></i>
                            <input type="password" class="form-control" id="confirmPSW" name="confirmPSW" placeholder="Confirm your password" required>
                            <button type="button" class="password-toggle" onclick="togglePasswordVisibility('confirmPSW')">
                                <i class="fas fa-eye" id="confirmPSWToggleIcon"></i>
                            </button>
                        </div>
                        <div id="passwordMatch" class="text-danger"></div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Role, new { @class = "form-label" })
                        <div class="input-group">
                            <i class="fas fa-user-tag input-icon"></i>
                            @Html.DropDownListFor(m => m.Role, new SelectList(new[] { "Admin", "User" }), "Select your role", new { @class = "select-control", required = "required" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="register-btn" id="registerBtn" disabled>
