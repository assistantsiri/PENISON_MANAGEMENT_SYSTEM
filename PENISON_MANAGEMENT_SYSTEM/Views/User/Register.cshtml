                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.StaffName, new { @class = "form-label" })
                        <div class="input-group">
                            <i class="fas fa-user input-icon"></i>
                            @Html.TextBoxFor(m => m.StaffName, new { @class = "form-control", placeholder = "Enter your full name", required = "required" })
                        </div>
                        @Html.ValidationMessageFor(m => m.StaffName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.USERNAME, new { @class = "form-label" })
                        <div class="input-group">
                            <i class="fas fa-user input-icon"></i>
                            @Html.TextBoxFor(m => m.USERNAME, new { @class = "form-control", placeholder = "Choose a username", required = "required" })
                        </div>
                        @Html.ValidationMessageFor(m => m.USERNAME, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.PSW, new { @class = "form-label" })
                        <div class="input-group">
                            <i class="fas fa-lock input-icon"></i>
                            @Html.PasswordFor(m => m.PSW, new { @class = "form-control", placeholder = "Create a strong password", required = "required", id = "PSW" })
                            <button type="button" class="password-toggle" onclick="togglePasswordVisibility('PSW')">
                                <i class="fas fa-eye" id="PSWToggleIcon"></i>
                            </button>
                        </div>
                        <div class="password-strength">
                            <div class="strength-meter">
