            }

            .register-title {
                font-size: 24px;
            }

            .welcome-title {
                font-size: 24px;
            }

            .welcome-subtitle {
                font-size: 16px;
            }

            .form-row {
                flex-direction: column;
                gap: 0;
            }
        }
    </style>

