    <script>

        const style = document.createElement('style');
        style.textContent = `
                        .fas, .far, .fab {
                            font-family: 'Font Awesome 5 Free';
                            font-weight: 900;
                        }
                        .fa-user:before { content: '\\f007'; }
                        .fa-id-card:before { content: '\\f2c2'; }
                        .fa-user-tag:before { content: '\\f507'; }
                        .fa-lock:before { content: '\\f023'; }
                        .fa-eye:before { content: '\\f06e'; }
                        .fa-eye-slash:before { content: '\\f070'; }
                        .fa-user-plus:before { content: '\\f234'; }
                        .fa-shield-alt:before { content: '\\f3ed'; }
                        .fa-tachometer-alt:before { content: '\\f3fd'; }
                        .fa-user-check:before { content: '\\f4fc'; }
                        .fa-chart-line:before { content: '\\f201'; }
                        .fa-times:before { content: '\\f00d'; }
                        .fa-check:before { content: '\\f00c'; }
                        .fa-spinner:before { content: '\\f110'; }
                        .fa-exclamation-circle:before { content: '\\f06a'; }
                    `;
        document.head.appendChild(style);


        function checkPasswordStrength(password) {
            let strength = 0;
            const requirements = {
                length: password.length >= 8,
                uppercase: /[A-Z]/.test(password),
                lowercase: /[a-z]/.test(password),
                number: /[0-9]/.test(password),
                special: /[^A-Za-z0-9]/.test(password)
            };


            document.getElementById('reqLength').className = requirements.length ? 'requirement valid' : 'requirement invalid';
            document.getElementById('reqUppercase').className = requirements.uppercase ? 'requirement valid' : 'requirement invalid';
            document.getElementById('reqLowercase').className = requirements.lowercase ? 'requirement valid' : 'requirement invalid';
            document.getElementById('reqNumber').className = requirements.number ? 'requirement valid' : 'requirement invalid';
            document.getElementById('reqSpecial').className = requirements.special ? 'requirement valid' : 'requirement invalid';


            if (requirements.length) strength += 20;
            if (requirements.uppercase) strength += 20;
            if (requirements.lowercase) strength += 20;
            if (requirements.number) strength += 20;
            if (requirements.special) strength += 20;


            const strengthMeter = document.getElementById('strengthMeter');
            const strengthText = document.getElementById('strengthText');

            strengthMeter.style.width = strength + '%';

            if (strength < 40) {
                strengthMeter.style.backgroundColor = '#f44336';
                strengthText.textContent = 'Weak password';
                strengthText.style.color = '#f44336';
            } else if (strength < 80) {
                strengthMeter.style.backgroundColor = '#ff9800';
                strengthText.textContent = 'Moderate password';
                strengthText.style.color = '#ff9800';
            } else {
                strengthMeter.style.backgroundColor = '#4caf50';
                strengthText.textContent = 'Strong password';
                strengthText.style.color = '#4caf50';
            }

            return strength === 100;
        }


        function checkPasswordMatch() {
            const password = document.getElementById('PSW').value;
            const confirmPassword = document.getElementById('confirmPSW').value;
            const matchElement = document.getElementById('passwordMatch');

            if (confirmPassword === '') {
                matchElement.textContent = '';
                return false;
            }

            if (password === confirmPassword) {
                matchElement.textContent = 'Passwords match';
                matchElement.style.color = '#4caf50';
                return true;
            } else {
                matchElement.textContent = 'Passwords do not match';
                matchElement.style.color = '#f44336';
                return false;
            }
        }


        function togglePasswordVisibility(fieldId) {
            const field = document.getElementById(fieldId);
            const icon = document.getElementById(fieldId + 'ToggleIcon');

            if (field.type === 'password') {
                field.type = 'text';
                icon.className = 'fas fa-eye-slash';
            } else {
                field.type = 'password';
                icon.className = 'fas fa-eye';
            }
        }


        function validateForm() {
            const password = document.getElementById('PSW').value;
            const isStrongPassword = checkPasswordStrength(password);
            const passwordsMatch = checkPasswordMatch();


            const staffNo = document.getElementById('StaffNo').value;
            const staffName = document.getElementById('StaffName').value;
            const username = document.getElementById('USERNAME').value;
            const role = document.getElementById('Role').value;

            const allFieldsFilled = staffNo && staffName && username && role && password;


            document.getElementById('registerBtn').disabled = !(allFieldsFilled && isStrongPassword && passwordsMatch);
        }


        document.getElementById('registerForm').addEventListener('submit', function (e) {
            const password = document.getElementById('PSW').value;
            const isStrongPassword = checkPasswordStrength(password);
            const passwordsMatch = checkPasswordMatch();

            if (!isStrongPassword || !passwordsMatch) {
                e.preventDefault();
                alert('Please ensure your password meets all requirements and matches the confirmation.');
                return;
            }

            const registerBtn = document.getElementById('registerBtn');
            registerBtn.disabled = true;
            registerBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Creating Account...';
        });


        document.addEventListener('DOMContentLoaded', function () {
            const successMessage = document.getElementById('successMessage');
            if (successMessage) {
                setTimeout(() => {
                    successMessage.style.animation = 'slideOut 0.5s forwards';
                    setTimeout(() => {
                        if (successMessage.parentElement) {
                            successMessage.parentElement.removeChild(successMessage);
                        }
                    }, 500);
                }, 5000);
            }
        });


        document.getElementById('PSW').addEventListener('input', validateForm);
        document.getElementById('confirmPSW').addEventListener('input', validateForm);
        document.getElementById('StaffNo').addEventListener('input', validateForm);
        document.getElementById('StaffName').addEventListener('input', validateForm);
        document.getElementById('USERNAME').addEventListener('input', validateForm);
